<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sri_HidayantiActivity">

    <ImageView
        android:id="@+id/img_photo"
        android:src="@drawable/sri_hidayanti"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sri Hidayanti"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="216dp"
        android:layout_marginTop="200dp"
        android:text="Sri Hidayanti merupakan seorang mahasiswi aktif yang menempuh pendidikan di Universitas
  Tadulako angkatan 2021 tepatnya di Fakultas Teknik Jurusan Teknologi Informasi dan Program Studi
  S1 Teknik Informatika."/>

</RelativeLayout>